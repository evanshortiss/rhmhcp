#!/usr/bin/env node

'use strict';

const program = require('commander');
const init = require('../lib/init');

program
  .arguments('<server-url>')
  .action(function (s) {
    init({
      serverUrl: s
    })
      .catch((e) => {
        console.log('Init encountered an error: %s', e);
        console.error(e.stack);
        process.exit(1);
      })
  })
  .parse(process.argv);

